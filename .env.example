# Telegram Bot Configuration
# Get your token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Serial Port Configuration
# Find your Arduino port:
# - macOS: /dev/cu.usbserial-* or /dev/cu.usbmodem*
# - Linux: /dev/ttyUSB* or /dev/ttyACM*
# - Windows: COM3, COM4, etc.
SERIAL_PORT=/dev/cu.usbserial-0001
SERIAL_BAUD_RATE=9600

# Database Configuration
# SQLite database file path (created automatically if doesn't exist)
DATABASE_PATH=data/sensors.db

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Default Humidity Thresholds (%)
# These are defaults for new users (can be customized via bot commands)
DEFAULT_HUMIDITY_MIN=40.0
DEFAULT_HUMIDITY_MAX=60.0
