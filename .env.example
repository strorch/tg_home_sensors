# Telegram Bot Configuration
# Get your token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Serial Port Configuration
# Find your Arduino port:
# - macOS: /dev/cu.usbserial-* or /dev/cu.usbmodem*
# - Linux: /dev/ttyUSB* or /dev/ttyACM*
# - Windows: COM3, COM4, etc.
SERIAL_PORT=/dev/cu.usbserial-0001
SERIAL_BAUD_RATE=9600

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/tg_home_sensors

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# MCP Server Configuration
# Keep disabled unless you run src.mcp.main
MCP_ENABLED=false
MCP_HOST=127.0.0.1
MCP_PORT=8081
MCP_API_KEY=change_me_to_random_secret
MCP_MAX_HISTORY_DAYS=7

# Default Humidity Thresholds (%)
# These are defaults for new users (can be customized via bot commands)
DEFAULT_HUMIDITY_MIN=40.0
DEFAULT_HUMIDITY_MAX=60.0
